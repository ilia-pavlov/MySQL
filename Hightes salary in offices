SELECT 
	CONCAT(o.address,o.city,o.state ) AS Full_Office_Name,
  e.job_title,
  CONCAT(e.first_name, e.last_name) AS Employee_Full_Name,
  e.salary,
	m.first_name AS manager

FROM employees e
JOIN offices o
	  USING(office_id)
LEFT JOIN employees m
		  ON m.employee_id = e.reports_to  
WHERE (o.office_id,e.salary) IN (SELECT office_id, MAX(salary)
										             FROM employees
                                 GROUP BY office_id)
ORDER BY salary DESC           
    
